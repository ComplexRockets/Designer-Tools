    <TextMeshPro class="context-menu-button&gt;@TextMeshPro" fontSize="18" device="mobile" />
    <Image class="context-menu-item-no-icon&gt;@Image" active="false" />
    <TextMeshPro class="context-menu-item-no-icon&gt;@TextMeshPro" offsetMin="0 0" />
    <Image class="context-menu-item-with-icon&gt;@Image" active="true" />
    <TextMeshPro class="context-menu-item-with-icon&gt;@TextMeshPro" offsetMin="28 0" device="-mobile" />
    <TextMeshPro class="context-menu-item-with-icon&gt;@TextMeshPro" offsetMin="36 0" device="mobile" />
  </Defaults>
  <VerticalLayout id="context-menu" class="no-image border context-menu-layout" active="false">
    <ContentButton internalId="context-menu-button-template" class="btn list-item audio-btn-click context-menu-button" active="false">
      <Image internalId="context-menu-item-icon" />
      <TextMeshPro />
    </ContentButton>
  </VerticalLayout>
