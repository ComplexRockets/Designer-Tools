<?xml version="1.0" encoding="utf-8"?>
<XmlLayout xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\XmlLayout.xsd">
  <Include path="Ui/Xml/Styles.xml" />
  <Defaults></Defaults>
  <Panel id="panel" showAnimation="FadeIn" hideAnimation="FadeOut" animationDuration="0.1" class="dialog-background">
    <VerticalLayout class="panel border" width="380" contentSizeFitter="vertical" spacing="10" padding="20">
      <TextMeshPro id="label-text" class="value" text="Title" minHeight="100" />
      <Panel class="row" padding="0">
        <TextMeshProInputField id="input" text="">
          <TMP_Placeholder id="placeholder-text" text="Enter Text..." alignment="Center" />
          <TMP_Text text="" alignment="Center" />
        </TextMeshProInputField>
      </Panel>
      <Panel preferredHeight="50">
        <Button id="cancel-button" class="btn audio-btn-back" rectAlignment="LowerLeft" width="150">
          <TextMeshPro id="cancel-button-text" text="CANCEL" />
        </Button>
        <Button id="okay-button" class="btn btn-primary audio-btn-big" rectAlignment="LowerRight" width="150">
          <TextMeshPro id="okay-button-text" text="OKAY" />
        </Button>
      </Panel>
    </VerticalLayout>
  </Panel>
</XmlLayout>