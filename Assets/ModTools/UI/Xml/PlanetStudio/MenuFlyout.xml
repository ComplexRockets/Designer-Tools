<?xml version="1.0" encoding="utf-8"?>
<XmlLayout xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\XmlLayout.xsd">
  <Include path="Ui/Xml/Design/DesignStyles.xml" />
  <Defaults></Defaults>
  <VerticalScrollView class="no-image">
    <VerticalLayout class="no-image" childForceExpandHeight="false" padding="20" spacing="10" contentSizeFitter="vertical" pivot="0 1" childAlignment="UpperCenter" rectAlignment="UpperLeft">
      <Button class="btn" rectAlignment="LowerLeft" onClick="OnCreatePlanetButtonClicked();">
        <TextMeshPro text="CREATE PLANET" />
      </Button>
      <Button class="btn" rectAlignment="LowerLeft" onClick="OnLoadPlanetButtonClicked();">
        <TextMeshPro text="LOAD PLANET" />
      </Button>
      <Image class="separator" />
      <Button class="btn" rectAlignment="LowerLeft" onClick="OnCreateSystemButtonClicked();">
        <TextMeshPro text="CREATE SYSTEM" />
      </Button>
      <Button class="btn" rectAlignment="LowerLeft" onClick="OnLoadSystemButtonClicked();">
        <TextMeshPro text="LOAD SYSTEM" />
      </Button>
      <Image class="separator" />
      <Button class="btn cb-only" rectAlignment="LowerLeft" onClick="OnSavePlanetButtonClicked();">
        <TextMeshPro text="SAVE PLANET" />
      </Button>
      <Button class="btn ps-only" rectAlignment="LowerLeft" onClick="OnSaveSystemButtonClicked();">
        <TextMeshPro text="SAVE SYSTEM" />
      </Button>
      <Image class="separator" />
      <Panel preferredHeight="40">
        <Button class="icon-button audio-btn-big" icon="Ui/Sprites/Common/IconSettings" rectAlignment="MiddleLeft" offsetXY="15 0" onClick="OnSettingsButtonClicked();" tooltip="Open the settings window" tooltipPosition="Above" />
        <Button class="icon-button audio-btn-big" icon="Ui/Sprites/Common/IconButtonShare" rectAlignment="MiddleCenter" onClick="OnShareButtonClicked();" tooltip="Upload this to the website to share it with other players." tooltipPosition="Above" />
        <Button class="icon-button audio-btn-big" icon="Ui/Sprites/Common/IconButtonCamera" rectAlignment="MiddleRight" offsetXY="-15 0" onClick="OnPhotoLibraryButtonClicked();" tooltip="Photo Library" tooltipPosition="Above" id="photo-library-button" />
      </Panel>
      <Button class="btn btn-primary" rectAlignment="LowerLeft" onClick="OnHelpButtonClicked();">
        <TextMeshPro text="GUIDE" />
      </Button>
      <Button class="btn" rectAlignment="LowerLeft" onClick="OnBugReportButtonClicked();" tooltip="Report a bug to the developers.">
        <TextMeshPro text="REPORT A BUG" />
      </Button>
      <Image class="separator" />
      <Button class="btn" rectAlignment="LowerLeft" onClick="OnExitButtonClicked();">
        <TextMeshPro text="EXIT" />
      </Button>
    </VerticalLayout>
  </VerticalScrollView>
</XmlLayout>